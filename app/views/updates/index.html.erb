
    <% @updates.reverse.each do |update| %>
    <div class="list-group">
  <a href="projects/<%= update.project.id %>" class="list-group-item active">
      <%= update.project.name %>
  <span class="float-right">
      <%= time_ago_in_words(update.created_at)%> by
      <em><%= update.who %></em>
  </span>
  </a>
  <div class="well" id="individual-update">
    <span class="update-description"><%= update.description %>
</span>
    <p class="update-who">
  </div>
</div>

    <% end %>