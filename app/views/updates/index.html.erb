<h1>Updates</h1>

    <% @updates.reverse.each do |update| %>
    <div class="list-group">
  <a href="projects/<%= update.project.id %>" class="list-group-item active">
      <%= update.project.name %>
  <span class="float-right">
      <%= time_ago_in_words(update.created_at)%> ago
  </span>
  </a>
  <div class="well">
    <span class="update-description"><%= update.description %>
</span>
    <p class="update-who">Posted by:<%= update.who %> 
  
  </div>
</div>

    <% end %>