<!DOCTYPE html>

<html>
<head>
  <title>Projecttracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">

      <a class="navbar-brand" href="/projects">Project Tracker</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">

      	<% if current_page?(updates_path)%>
        <li><a href="projects">Projects</a></li>
        <li class="active"><a href="updates">Updates</a></li>
        <% elsif current_page?(projects_path) %>
        <li class="active"><a href="projects">Projects</a></li>
        <li><a href="updates">Updates</a></li>
        <% else %>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/updates">Updates</a></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">

        <% if session[:user_id] %>
                  <%= link_to 'Log out', logout_path, class:'btn btn-primary btn-xs btn' %>
        <% else %>
              <%= form_tag sessions_path do %> 
             <li>
                <%= text_field_tag :username %>
                <%= submit_tag 'Log in', class:'btn btn-primary btn-xs'%>
              </li>
              <li>
                 <%= password_field_tag :password  %>  
                 <%= link_to 'Register', new_users_path, class:'btn btn-primary btn-xs btn' %>
              </li> 
               <% end %>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container -->
</nav>

<div class="container">
  <div id="notice-box">
    <span id="notice" ><%= notice %></span>
  </div>
<%= yield %>
</div>

</body>
</html>
