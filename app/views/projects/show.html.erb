


<div class="container">

  <div id="notice-box">
    <span id="notice" ><%= notice %></span>
  </div>

  <div class="row">

    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" >



      <div class="well" id="project-display">
        <div class="project-btns">
          <%= link_to 'Edit Project', edit_project_path(@project), class:'btn btn-primary btn-sm' %>
          <%= link_to 'Remove Project', @project, method: :delete, data: { confirm: 'Are you sure you want to delete this Project?' }, class:'btn btn-primary btn-sm'  %>
        </div>

        <p>

          <h2 class="project-title"><%= @project.name %></h2>
          <%= @project.description %>
        </p>

        <p>   
          <h4><u>Currently on this project:</u></h4>
          <%= @project.who %>
        </p>

        <p>

          <h4><u>How to get involved:</u></h4>
          <%= @project.how %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="new-update">
      <div class="well" id="update-well"> 
       <span class="center">Post an update</span>
       <%= render 'updates/form' %>
     </div>
   </div>
 </div>


  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" id="update-list">
    <h3 class="center">Updates</h3>
    <% @project.updates.each do |update| %>
    <div class="list-group">
      <span class="list-group-item active update-title">
      <%= time_ago_in_words(update.created_at)%>
      ago by
      <em><%= update.who %></em>      
      <span class="delete">
      <%= link_to 'Edit', edit_update_path(update), class:'btn btn-warning btn-xs' %>
      <%= link_to 'Remove', update, method: :delete, data: { confirm: 'Are you sure you want to delete this update?' }, class:'btn btn-danger btn-xs' %></span>
      </span>
      <div class="well">
       <%= update.description %>
      </div>
    </div>
    <% end %>
  </div>




