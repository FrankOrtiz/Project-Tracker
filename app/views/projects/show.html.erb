<p id="notice"><%= notice %></p>
<div class="jumbotron">

<div class="project-btns">
<%= link_to 'Edit Project', edit_project_path(@project), class:'btn btn-primary btn-xs' %>
<%= link_to 'Remove Project', @project, method: :delete, data: { confirm: 'Are you sure you want to delete this Project?' }, class:'btn btn-primary btn-xs'  %>
</div>

<p>
  <h1><%= @project.name %></h1>
</p>

<p>
  <strong></strong>
  <%= @project.description %>
</p>
<br>
<p>
  <strong>Currently on this project</strong>
  <br>
  <%= @project.who %>
</p>

<p>
  <strong>Interested?</strong>
  <br>
  <%= @project.how %>
</p>
</div>


<h3>Project updates</h3>
<% @project.updates.each do |update| %>
    <div class="list-group">
	<span class="list-group-item active update-title">
	<% t = update.created_at %>
	<%= update.who %> 
	on   
	<%= t.strftime("%b, %d %I:%M %p") %>

	<span class="delete"><%= link_to 'Remove', update, method: :delete, data: { confirm: 'Are you sure you want to delete this update?' }, class:'btn btn-danger btn-xs' %></span>

</span>
<div class="well">
	<%= update.description %>
</div>
</div>
<% end %>




<h3>Got an update?</h3>
<div class="well">
<%= render 'updates/form' %>
</div>


