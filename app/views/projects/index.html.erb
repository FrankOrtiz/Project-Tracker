<div class="container">

  <div class="row">

    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" >

        <span class="list-group-item active update-title">
          Project  
          <span class="float-right">
            Updated
          </span>
        </span>
      <ul class="list-group">
      <div class='word-break'>
        
           <% @projects.each do |project| %>

       <a href="/projects/<%= project.id %>" class="list-group-item">
          <div class="reduce">
          <strong><%= project.name %></strong>

        <span class="label label-default" id="time-ago">
            <% x = project.updates.order('created_at DESC').first %>
            <% if project.updates.empty? %>
            No updates
            <% else %>
            <%= time_ago_in_words(x.created_at) %>    
               by 
          <%= x.who %>
          
            <% end %>
      </div>
        </span>
       </a>
          <% end %> 
      </ul>
        <div class="btn-group">
        <%= link_to 'Create Project', new_project_path, class:'btn btn-primary btn-sm' %>
      </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 well" >
      Mission area
    </div>
  </div>
</div>