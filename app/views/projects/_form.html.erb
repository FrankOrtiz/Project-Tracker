
<div class="well">
<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><span class="label label-danger"><%= pluralize(@project.errors.count, "error") %> during project creation</span></h2>
  <div class="error-reasons">
      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
      </ul>
    </div>
  <% end %>

<div class="well">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :who %><br>
    <%= f.text_area :who, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :how %><br>
    <%= f.text_area :how, class:'form-control' %>
  </div>
<div class="btn-toolbar" role="toolbar">

    <%= f.submit 'Submit', class:'btn btn-primary btn-sm' %>

 
<% end %>
